@model BookViewModel<Book>
@{
    ViewBag.Title = "Delete";

    if (string.IsNullOrWhiteSpace(Model.Content.ImagePath))
    {
        Model.Content.ImagePath = Model.NoImagePath;
    }

    var dateRead = "";
    if (Model.Content.DateRead.HasValue)
    {
         dateRead = Model.Content.DateRead.Value.ToShortDateString();
    }
}

<main class="p-delete">
    <header class="b-wrapper p-delete_header">
        <h1 class="p-delete_headerTitle">Delete</h1>
        <h2 class="p-delete_headerText">Are you sure you want to delete this?</h2>
    </header>

    <section class="p-delete_section">
        <div class="b-wrapper p-delete_bookContainer">
            <div class="p-delete_bookInfo">
                <h2 class="p-delete_bookTitle">@Model.Content.Title</h2>

                <h3 class="p-delete_author">@Model.Content.Author</h3>

                @for (var i = 0; i < Model.Content.Rating; i++)
                {
                    <img class="p-delete_rating" src="~/images/AppResources/rating.png" alt="The book rating is @Model.Content.Rating" />
                }

                <p class="p-delete_dateRead">Date Read: @dateRead</p>
            </div>

            <img class="p-delete_image" src="~/images/@Model.Content.ImagePath" />
        </div>

        <form method="post">
            <div class="b-wrapper p-delete_actionsContainer">
                <button class="p-delete_delete" type="submit">Delete</button>
                <a class="p-delete_cancel" asp-action="Index">Cancel</a>
            </div>
        </form>
            
    </section>
</main>

