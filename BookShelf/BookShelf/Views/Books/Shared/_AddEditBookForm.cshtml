@model BookDto

<form method="post" enctype="multipart/form-data">
    <div class="b-wrapper p-addEditBookForm">
        <div class="p-addEditBookForm_formData">
            <label class="p-addEditBookForm_label" asp-for="Title">Title: </label>
            <span class="p-addEditBookForm_error" asp-validation-for="Title"></span>
            <input class="p-addEditBookForm_input" asp-for="Title" />

            <label class="p-addEditBookForm_label" asp-for="Author">Author: </label>
            <span class="p-addEditBookForm_error" asp-validation-for="Author"></span>
            <input class="p-addEditBookForm_input" asp-for="Author" />

            <label class="p-addEditBookForm_label" asp-for="Rating">Rating: </label>
            <span class="p-addEditBookForm_error" asp-validation-for="Rating"></span>
            <input class="p-addEditBookForm_input" asp-for="Rating" />

            <label class="p-addEditBookForm_label" asp-for="DateRead">Date Read: </label>
            <span class="p-addEditBookForm_error" asp-validation-for="DateRead"></span>
            <input class="p-addEditBookForm_input" asp-for="DateRead" type="date" />

            <div class="p-addEditBookForm_imageContainer">
                <span class="p-addEditBookForm_imageLabel">Image: </span>
                <span class="p-addEditBookForm_error" asp-validation-for="Image"></span>
                <label class="p-addEditBookForm_imageButton" asp-for="Image">Load</label>
                <span class="p-addEditBookForm_imageContent">No Image Selected</span>
                <input class="p-addEditBookForm_imageInput" asp-for="Image" 
                       type="file" data-rule-fileSize="true" data-rule-fileExtension="true" />
            </div>

            <p class="p-addEditBookForm_note">
                *Note: to prevent stretching please make sure your images
                have a width to height ratio of around 7:10
            </p>
        </div>

        <div class="p-addEditBookForm_descriptionContainer">
            <label class="p-addEditBookForm_label" asp-for="Description">Description: </label>
            <span class="p-addEditBookForm_error" asp-validation-for="Description"></span>
            <textarea class="p-addEditBookForm_textArea" asp-for="Description" rows="14" cols="30"></textarea>
        </div>
    </div>

    <div class="b-wrapper p-addEditBookForm_actionsContainer">
        <button class="o-button -green p-addEditBookForm_submit">Submit</button>
        <a class="o-buttonLink -orange p-addEditBookForm_cancel" asp-action="Index">Cancel</a>
    </div>
</form>